{
    "name": "baspa/buienradar-php-api",
    "description": "PHP package to provide fluent syntax for the Buienradar API",
    "keywords": [
        "Baspa",
        "buienradar-php-api"
    ],
    "homepage": "https://github.com/baspa/buienradar-php-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Baspa",
            "email": "hello@baspa.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.1",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Baspa\\Buienradar\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Baspa\\Buienradar\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
